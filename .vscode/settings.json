{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },

  "files.exclude": {
    "**/.git": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/.nyc_output": true
  },

  "search.exclude": {
    "**/.git": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/.nyc_output": true
  },

  "files.watcherExclude": {
    "**/.git": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/.nyc_output": true
  }
}
